{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "dist",
        "sourceMap": false,
        "rootDir": "src",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
